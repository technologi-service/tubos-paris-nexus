---
// No se requiere lógica de servidor
---

{/* --- MODAL DE CONFIRMACIÓN (Sin tiempo, con botón Aceptar) --- */}
<div id="info-modal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm items-center justify-center z-50 transition-opacity duration-300 px-4">
    <div class="bg-white border-t-4 border-[#0f4c65] rounded-xl shadow-2xl max-w-md w-full p-6 transform scale-100 transition-transform">

        <div class="text-center space-y-4">
            {/* Icono Animado */}
            <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-blue-100">
                <svg class="h-10 w-10 text-[#0f4c65]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>

            {/* Título */}
            <h3 class="text-2xl font-bold text-gray-900">Solicitud en Proceso</h3>

            {/* Mensaje del Correo */}
            <div class="text-gray-600 text-base leading-relaxed">
                <p>Los datos han sido enviados correctamente para su procesamiento.</p>
                <p class="mt-2 font-medium text-[#0f4c65]">
                    Recibirás un correo electrónico de notificación cuando el proceso de etiquetado haya finalizado.
                </p>
            </div>

            {/* Botón Aceptar */}
            <div class="mt-6">
                <button
                    id="btn-modal-close"
                    type="button"
                    class="w-full inline-flex justify-center rounded-lg border border-transparent shadow-sm px-4 py-3 bg-[#0f4c65] text-base font-medium text-white hover:bg-[#0c3b4e] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#0f4c65] transition-colors"
                >
                    Entendido, Aceptar
                </button>
            </div>
        </div>
    </div>
</div>

{/* --- BOTÓN PRINCIPAL --- */}
<div class="flex flex-col gap-8 mt-8">
    <div class="flex justify-center w-full">
        <button
            type="button"
            id="btn-trigger-etiquetado"
            class="group relative w-full max-w-3xl py-5 px-8 bg-linear-to-br from-[#0f4c65] to-[#165f7d] text-white rounded-2xl shadow-lg hover:shadow-2xl hover:scale-[1.01] transition-all duration-300 flex items-center justify-center gap-5 overflow-hidden"
        >
            <div class="absolute inset-0 bg-white/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mr-3 group-hover:rotate-12 transition-transform duration-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>

            <div class="flex flex-col items-start">
                <span class="text-2xl font-bold tracking-wide">ETIQUETAR CLIENTES</span>
                <span class="text-xs uppercase tracking-widest opacity-80 group-hover:opacity-100">Iniciar Flujo Automático</span>
            </div>
        </button>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const btnTrigger = document.getElementById('btn-trigger-etiquetado');
        const modal = document.getElementById('info-modal');
        const btnCloseModal = document.getElementById('btn-modal-close');

        const WEBHOOK_ETIQUETADO_URL = '';

        // Función para cerrar el modal
        const cerrarModal = () => {
            if (modal) {
                modal.classList.remove('flex');
                modal.classList.add('hidden');
            }
        };

        // Evento para cerrar el modal con el botón "Aceptar"
        if (btnCloseModal) {
            btnCloseModal.addEventListener('click', cerrarModal);
        }

        if (btnTrigger) {
            btnTrigger.addEventListener('click', async () => {
                const originalContent = btnTrigger.innerHTML;

                // A. Loading Visual
                // @ts-ignore
                btnTrigger.disabled = true;
                btnTrigger.innerHTML = `
                    <svg class="animate-spin h-8 w-8 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <span class="ml-2 text-lg">Iniciando...</span>
                `;

                try {
                    // B. LLAMADA GET (Sin body)
                    const params = new URLSearchParams({
                        action: 'start_tagging',
                        timestamp: new Date().toISOString()
                    });

                    const urlFinal = `${WEBHOOK_ETIQUETADO_URL}?${params.toString()}`;

                    const res = await fetch(urlFinal, {
                        method: 'GET'
                    });

                    if (res.ok) {
                        // C. MOSTRAR MODAL (Sin setTimeout)
                        if (modal) {
                            modal.classList.remove('hidden');
                            modal.classList.add('flex'); // Flex para centrar
                        }
                    } else {
                        console.error("Error Webhook:", res.status);
                        alert(`Error: El servidor respondió con estado ${res.status}`);
                    }

                } catch (error) {
                    console.error("Error:", error);
                    alert("Error de conexión con el flujo.");
                } finally {
                    // D. Restaurar botón principal
                    // @ts-ignore
                    btnTrigger.disabled = false;
                    btnTrigger.innerHTML = originalContent;
                }
            });
        }
    });
</script>

---
import "../styles/global.css";

// Puedes cambiar esta imagen por la que usas en el header
const bgImage = "url('/dragones6.png')";
---

<section
  class="min-h-screen flex items-center justify-center bg-cover bg-center relative"
  style={`background-image: ${bgImage};`}
>
  {/* Overlay gradiente para dar el tono de marca sobre la imagen */}
  <div class="absolute inset-0 bg-linear-to-br from-[#0f4c65]/90 to-[#0a3548]/90 z-0"></div>

  <div class="w-full max-w-md bg-white rounded-2xl shadow-2xl p-8 z-10 mx-4 border border-gray-100 relative overflow-hidden">

    {/* Decoración superior */}
    <div class="absolute top-0 left-0 w-full h-2 bg-linear-to-r from-[#0f4c65] to-[#165f7d]"></div>

    {/* Header con Logo */}
    <div class="flex flex-col items-center mb-8">
      <div class="mb-4">
        <svg width="60" height="60" viewBox="0 0 200 100" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 50 C 30 20, 70 20, 80 50 C 70 80, 30 80, 20 50 Z" fill="#0f4c65"/>
            <circle cx="25" cy="45" r="4" fill="white"/>
            <path d="M22 47 Q25 42, 28 47" stroke="white" stroke-width="2" fill="none"/>
        </svg>
      </div>
      <h2 class="text-3xl font-extrabold text-[#0f4c65]">Tubos Paris</h2>
      <p class="text-gray-500 text-sm mt-1">Acceso al sistema KAIloop Nexus</p>
    </div>

    <form id="loginForm" class="space-y-6" novalidate>

      {/* Input Usuario */}
      <div class="space-y-2">
        <label for="usuario" class="text-sm font-bold text-gray-700 block ml-1">Email Corporativo</label>
        <div class="relative group">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            {/* Icono Usuario */}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 group-focus-within:text-[#0f4c65] transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <input
            id="usuario"
            type="email"
            name="usuario"
            class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-[#0f4c65] focus:ring-1 focus:ring-[#0f4c65] transition-all text-gray-700 bg-gray-50 focus:bg-white"
            placeholder="usuario@kukulcan.ai"
            required
          />
        </div>
      </div>

      {/* Input Password */}
      <div class="space-y-2">
        <label for="password" class="text-sm font-bold text-gray-700 block ml-1">Password</label>
        <div class="relative group">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            {/* Icono Candado */}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 group-focus-within:text-[#0f4c65] transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <input
            id="password"
            type="password"
            name="password"
            class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-[#0f4c65] focus:ring-1 focus:ring-[#0f4c65] transition-all text-gray-700 bg-gray-50 focus:bg-white"
            placeholder="••••••••"
            required
          />
        </div>
      </div>

      {/* Botón */}
      <button
        type="submit"
        id="btn-login"
        class="w-full py-3.5 rounded-lg bg-linear-to-r from-[#0f4c65] to-[#165f7d] text-white font-bold text-lg shadow-md hover:shadow-lg hover:from-[#0c3b4e] hover:to-[#124d66] transform hover:-translate-y-0.5 transition-all duration-200 flex justify-center items-center gap-2"
      >
        <span>Acceder</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </button>

      {/* Mensaje de Error */}
      <div
        id="errorMessage"
        class="hidden transform transition-all duration-300"
        role="alert"
      >
        <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r shadow-sm flex items-start">
            <svg class="h-5 w-5 text-red-500 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
                <p class="font-bold text-red-700 text-sm">Error de credenciales</p>
                <p class="text-red-600 text-sm">El correo o la contraseña no son correctos.</p>
            </div>
        </div>
      </div>
    </form>

    <div class="mt-8 text-center">
        <p class="text-xs text-gray-400">&copy; {new Date().getFullYear()} Kukulcan AI Consulting</p>
    </div>
  </div>
</section>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const DEFAULT_USER = "tubosparis@correo.com";
    const DEFAULT_PASSWORD = "tubosparis2025";

    const form = document.getElementById("loginForm");
    const usuarioInput = document.getElementById("usuario");
    const passwordInput = document.getElementById("password");
    const errorMessage = document.getElementById("errorMessage");
    const btnLogin = document.getElementById("btn-login");

    function showError() {
      errorMessage.classList.remove("hidden");
      // Pequeña animación de entrada
      errorMessage.classList.add("animate-pulse");
      setTimeout(() => errorMessage.classList.remove("animate-pulse"), 500);

      // Reset botón
      btnLogin.disabled = false;
      btnLogin.innerHTML = `
        <span>Acceder</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      `;
    }

    function hideError() {
      errorMessage.classList.add("hidden");
    }

    form.addEventListener("submit", (event) => {
      event.preventDefault();

      // Feedback visual de carga
      btnLogin.disabled = true;
      btnLogin.innerHTML = `
        <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Verificando...
      `;

      const usuario = usuarioInput.value.trim();
      const password = passwordInput.value.trim();

      // Simulamos un pequeño retraso de red para dar feedback al usuario
      setTimeout(() => {
          if (usuario !== DEFAULT_USER || password !== DEFAULT_PASSWORD) {
            showError();
            return;
          }

          hideError();
          btnLogin.innerHTML = `<span>accediendo...</span>`;
          window.location.href = "/admin/rangosConfig";
      }, 800);
    });

    [usuarioInput, passwordInput].forEach((el) =>
      el.addEventListener("input", hideError)
    );
  });
</script>
